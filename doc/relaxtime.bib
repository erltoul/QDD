@article{Gig03a,
atitle={Angular distribution of emitted electrons in sodium clusters: A semi-classical approach },
author={E. Giglio and P.--G. Reinhard and E. Suraud},
journal={Phys. Rev. A },
volume={67},
year={2003},
pages={043202},
urlx={http://link.aps.org/doi/10.1103/PhysRevA.67.043202},
abstract={
We present a theoretical study of the angular distribution of emitted
electrons of a sodium cluster, irradiated by a short and intense laser
pulses. While the polarization of the excitation field tends to focus
a directional emission, dynamical correlations tend to thermalize the
electrons, giving rise to a more isotropic ionization. The competition
between these processes is investigated using a semi-classical model
(VUU), where the dynamical correlations are taken in account by
electron-electron correlations in Markovian approximation, the widely
known \"Uhling-Uhlenbeck collision term.  The results are compared to
a semi-classical pure mean-field propagation ({V}lasov equation), to
work out the influence of dynamical correlations on the angular
distribution of the electron emission. Trends with laser intensity and
frequency are explored. The time evoluation of the angular
distributions shows that direct emission processes are stronger in the
early phase of the processs while isotropic thermal emission dominates
later.
}
}

